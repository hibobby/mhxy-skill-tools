{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "梦幻西游账号管理",
  "version": "1.0.0",
  "identifier": "com.mhxy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "梦幻西游账号管理",
        "width": 1050,
        "height": 800,
        "resizable": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
    "wix": {
      "language": "zh-CN" 
    }
  }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:mhxy.db"]
    }
  }
}

